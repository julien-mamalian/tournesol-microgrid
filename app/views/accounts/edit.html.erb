<%= content_for(:title) do %>
  <%= current_user.first_name %>
<% end %>

<%= link_to "Retour", :back %>

<div class="container card-white ">
  <div class="row">
    <div class="col-xs-12">
      <h1>Edit profile</h1>
      <%= simple_form_for(@user, url: account_path(current_user), html: { multipart: true }) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :function %>
        <%= f.input :entreprise %>
        <%= f.input :city %>
        <%= f.label :picture %>
        <%= f.file_field :picture %>
        <br>
        <%= f.button :submit, class: "btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>


