<% if  user_signed_in?%>
  <%= content_for(:title) do %>
    <%= @user.first_name %>
  <% end %>
<% else %>
  <%= content_for(:title) do %>
    <%= "Profile" %>
  <% end %>
<% end %>

<div id="relative">
  &nbsp;
  <div id="absolute">
  <%= link_to (image_tag @user.picture.url(:thumb), class: "img-circle"), edit_account_path%>
  </div>
</div>

<div id="description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 ">
          <div class="text-center">
            <h1><%= @user.first_name %> <%=@user.last_name%> </h1>
          </div>

          <div class="text-center">
           <%=@user.function%> at <%=@user.entreprise%> in <%=@user.city%>
          </div>

          <div class="text-center cmd-small">
            <br>
            <%= link_to "Edit profile", edit_account_path %>
          </div>
      </div>
    </div>
  </div>
</div>


<ul class="list-unstyle list-inline text-center margin-top-50px padding-bottom-50px">
  <% if user_signed_in? && @user.id == current_user.id %>
    <li> <%= link_to "Your articles", :anchor => "articles" %> </li>
    <li></li>
    <li><%= link_to "Your projects", :anchor => "projects"%></li>
  <% else %>
    <li> <%= link_to "Articles", :anchor => "articles" %> </li>
    <li></li>
    <li><%= link_to "Projects", :anchor => "projects"%></li>
  <% end %>
</ul>

<div class="block-divider">
  <div>
    <div class="container text-center" id="right-container">
      <div class="row">
        <div class="title text-in-box" id="articles">
          <% if user_signed_in? && @user.id == current_user.id %>
            <p>Your articles</p>
          <% else %>
          <p>  <%= @user.first_name %> 's articles </p>
          <% end %>
        </div>

          <% @user.articles.each do |article| %>
            <div class="col-xs-3 card-shadowed">
              <ul class= "list-unstyled">
                <li><strong><%= link_to article.title, article_path(article)  %></strong></li>
                <li><%= image_tag article.picture.url(:thumb), id:"thumb_profile", class:"img-circle img-uniform-size"  %></li>
                <% if user_signed_in? && @user.id == current_user.id %>
                <li><%= link_to "Update", edit_article_path(article) %> <%= link_to "Destroy", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></li>
                <% else %>
                <% end %>
              </ul>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>


