<% if  user_signed_in?%>
  <%= content_for(:title) do %>
    <%= @user.first_name %>
  <% end %>
<% else %>
  <%= content_for(:title) do %>
    <%= "Profile" %>
  <% end %>
<% end %>

<div class="container card-white" id="left-container">
  <div class="row">
    <div class="col-xs-12">
      <%= image_tag @user.picture.url(:thumb), class: "img-circle" %>
    </div>
    <div>
      <ul class="list-unstyled">
        <li>
        <%= @user.first_name %> <%=@user.last_name%>
        <li>
        </li>
         <%=@user.entreprise%>
        </li>
        <li>
          <%=@user.function%>
        </li>
        <li>
          <%=@user.city%>
        </li>
      </ul>
      <%= link_to "Edit profile", edit_account_path %>

    </div>
  </div>
</div>


  <div class="tab_details" >
    <div class="container text-center" id="right-container">
      <div class="row">
        <% if user_signed_in? && @user.id == current_user.id %>
          <h3 class="text-center">Your articles</h3>
        <% else %>
        <h3 class="text-center">  <%= @user.first_name %> 's articles </h3>
        <% end %>
        <% @user.articles.each do |article| %>
          <div class="col-xs-3 ">
            <ul class= "list-unstyled">
              <li><strong><%= link_to article.title, article_path(article)  %></strong></li>
              <li><%= image_tag article.picture.url(:thumb), id:"thumb_profile", class:"img-circle img-uniform-size"  %></li>
              <% if user_signed_in? && @user.id == current_user.id %>
              <li><%= link_to "Update", edit_article_path(article)  %></li>
              <li><%= link_to "Destroy", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></li>
              <% else %>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>

