<%= simple_form_for([article, comment], remote: true) do |f| %>

  <%= f.input :description, class: "form_control" %>
  <%= f.hidden_field :date_creation, :value => Time.now%>
  <%= f.hidden_field :user_id, :value => current_user.id%>

  <%= f.button :submit, class: "btn-primary", id:"input_validate" %>

<% end %>
